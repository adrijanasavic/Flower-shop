<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_layout_height"
    android:layout_margin="@dimen/margin_10"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/flower_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wedding"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/flower_name"
        style="@style/ProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quantity_and_price"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_14"
        android:fontFamily="@font/greatvibes"
        tools:text="White wedding bouquet"
        android:layout_marginLeft="@dimen/margin_14"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/margin_25"
        android:background="@null"
        android:src="@drawable/buy"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:id="@+id/quantity_and_price"
        android:layout_width="@dimen/layout_width"
        android:layout_height="@dimen/layout_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/quantity"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginStart="@dimen/margin_21"
            android:fontFamily="@font/raleway"
            tools:text="5"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_21" />

        <TextView
            android:id="@+id/quantity_text"
            style="@style/Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_51"
            android:fontFamily="@font/raleway"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_10"
            android:text="@string/stock_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/margin_51" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/margin_54"
            android:fontFamily="@font/raleway"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_big"
            tools:text="25"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_54" />

        <TextView
            android:id="@+id/dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/text_padding"
            android:fontFamily="@font/raleway"
            android:text="@string/dollar"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_big"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/text_padding" />
    </RelativeLayout>
</RelativeLayout>